{
  "name": "electron-react",
  "version": "1.0.0",
  "description": "electron app",
  "main": "app/main/index.js",
  "author": "Mr.W",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run start:render\" \"wait-on http://localhost:3000 && npm run start:main\" ",
    "start:main": "electron .",
    "start:render": "cd app/renderer/src/main && npm start",
    "build": "npm run build:render && cross-env NPM_CONFIG_ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-builder",
    "build:render": "cd app/renderer/src/main && npm run build"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "16.0.10",
    "electron-builder": "^23.1.0",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "adm-zip": "^0.5.9",
    "electron-updater": "^5.0.5",
    "fs-extra": "^10.1.0",
    "request": "^2.88.2",
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "productName": "electron-react",
    "copyright": "Copyright Â© 2020 electron",
    "appId": "com.electron-react",
    "compression": "store",
    "directories": {
      "output": "./app.asar"
    },
    "files": "app",
    "extraFiles": [
      "app/renderer/src"
    ],
    "asar": true,
    "win": {
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true
    },
    "dmg": {
      "background": "resources/background.png",
      "title": "electron-react",
      "contents": [
        {
          "x": 410,
          "y": 275,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 275,
          "type": "file"
        }
      ],
      "window": {
        "x": 0,
        "y": 0,
        "width": 540,
        "height": 380
      }
    },
    "mac": {
      "icon": "resources/icon.icns"
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ]
  }
}
